<% include ../public/header.ejs %>

<style type="text/css">
.manage-tit {
		background: rgba(48, 65, 96, 0.8);
		border-radius: 3px 3px 0 0;
		color: #FFFFFF;
		padding: 1px 0 14px 0;
	}
}
</style>
<div class="container" style="margin-top: 100px;">
	<div class="row">
			<div class="col-md-9 col-md-offset-1" style="margin-top:30px;">
				<% if(success_msg != ''){ %>
					<div class="alert alert-success">
						<%= success_msg %>
					</div>
					<% } %>
						<% if(error_msg != ''){ %>
							<div class="alert alert-danger">
								<%= error_msg %>
							</div>
							<% } %>
			</div>
		</div>
	<div class="row">
		<div class="col-md-12 col-md-offset-0 col-sm-12 col-sm-offset-1 col-xs-12 col-xs-offset-1">
			<div class="manage-tit">
				<div class="col-md-6">
					<h3 class="text-left">我的订单</h3>
				</div>
				<div style="clear: both;"></div>
			</div>
		</div>
	</div>
</div>
<div class="container" style="margin-top: 50px;">
	<% for(var i = 0; i < orders.length; i++) { %>
		<div class="col-md-4" style="padding-left: 40px;padding-right: 40px;margin-bottom:40px;">
			<h3>订单号：<%= orders[i].oid %></h3>
			<h4>订购人：<%= orders[i].name %></h4>
			<h4>订购日期：<span class="order_date"><%= orders[i].order_date %></span></h4>
			<h4>订购书目：<%= orders[i].book_name %></h4>
			<h4>订购数量：<%= orders[i].onum %></h4>
			<h4>联系电话：<%= orders[i].phonenum %></h4>
			<h4>收货地址：<%= orders[i].order_address %></h4>
			<% if (orders[i].status == 0) { %>
			<h4>订单状态：未处理</h4>
			<h4><a class='btn btn-primary' href="/shop/clorder/<%= orders[i].oid %>">发货</a></h4>
			<% }else{ %>
			<h4>订单状态：已发货</h4>
			<% } %>
		</div>
		<% } %>
</div>

<script src="/js/bookstore/ordertime.js"></script>
<% include ../public/footer.ejs %>
