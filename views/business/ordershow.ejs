<% include ../public/header.ejs %>

<style type="text/css">
.manage-tit {
		background: rgba(48, 65, 96, 0.8);
		border-radius: 3px 3px 0 0;
		color: #FFFFFF;
		padding: 1px 0 14px 0;
	}
}
</style>
<div class="container" style="margin-top: 100px;">
	<div class="row">
			<div class="col-md-9 col-md-offset-1" style="margin-top:30px;">
				<% if(success_msg != ''){ %>
					<div class="alert alert-success">
						<%= success_msg %>
					</div>
					<% } %>
						<% if(error_msg != ''){ %>
							<div class="alert alert-danger">
								<%= error_msg %>
							</div>
							<% } %>
			</div>
		</div>
	<div class="row">
		<div class="col-md-12 col-md-offset-0 col-sm-12 col-sm-offset-1 col-xs-12 col-xs-offset-1">
			<div class="manage-tit">
				<div class="col-md-6">
					<h3 class="text-left">订单修改</h3>
				</div>
				<div style="clear: both;"></div>
			</div>
		</div>
	</div>
</div>

<form role="form" action="/users/updateorder/<%= rows[0].id %>" method="post">

<div class="container" style="margin-top: 20px;width:400px;">
<% for(var i = 0; i < rows.length; i++) { %>


	<div class="form-group" style="margin-top:10px;">
		<label for="name">订单号:</label>
		<input type="text" class="form-control" id="name" name="id" 
	placeholder="请输入名称" value=<%= rows[i].id %> disabled/>
	</div>
	<div class="form-group">
		<label for="name">状态:</label>
		<select name='status'>
 		<% if(rows[i].status==1){ %>
		<option value ="1" checked/>发货</option>
		<option value ="0">未发货</option>
		<% }else{ %>	
		<option value ="1" checked/>发货</option>
		<option value ="0">未发货</option>
		<% } %>
		</select>
	</div>
	<div class="form-group" style="margin-top:10px;">
		<label for="name">数量:</label>
		<input type="number" class="form-control" id="number" name="number"
			   placeholder="请输入名称" value=<%= rows[i].number %> >
	</div>
	<div class="form-group">
		<label for="name">收货地址:</label>
		<input type="text" class="form-control" id="order_address"  name="order_address"
			   placeholder="请输入名称" value=<%= rows[i].order_address %> >
	<% } %>

<input type='submit' class="btn_oltocart btn btn-primary" value="修改">
</form>
</div>

<script src="/js/bookstore/ordertime.js"></script>
<% include ../public/footer.ejs %>