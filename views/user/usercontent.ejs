<% include ../public/header.ejs %>

<% include ../public/header.ejs %>
<style type="text/css">
.manage-tit {
		background: rgba(48, 65, 96, 0.8);
		border-radius: 3px 3px 0 0;
		color: #FFFFFF;
		padding: 1px 0 14px 0;
	}
}
</style>
<div class="container" style="margin-top: 100px;">
	<div class="row">
			<div class="col-md-9 col-md-offset-1" style="margin-top:30px;">
				<% if(success_msg != ''){ %>
					<div class="alert alert-success">
						<%= success_msg %>
					</div>
					<% } %>
						<% if(error_msg != ''){ %>
							<div class="alert alert-danger">
								<%= error_msg %>
							</div>
							<% } %>
			</div>
		</div>
	<div class="row">
		<div class="col-md-12 col-md-offset-0 col-sm-12 col-sm-offset-1 col-xs-12 col-xs-offset-1">
			<div class="manage-tit">
				<div class="col-md-6">
					<h3 class="text-left">公告列表</h3>
				</div>
				<div style="clear: both;"></div>
			</div>
		</div>
	</div>
</div>
<div>
<div style='width:15%;float:left;margin-left:20%;' >
<table class="table table-condensed table-hover">
 
  <thead>
    <tr>
      <th style='text-align: center;'><h5> 公告名称</h5></th>
     
      </tr>
  </thead>
  <tbody>
  <% for(var i=0;i<rows.length;i++) {%>
    <tr>
      <td style='text-align: center;' ><h5> <a href='javascript:void(0);'  class='contentshow' data-id=<%= rows[i].id %>><%= rows[i].title %></a></h5></td>

      </tr>
      <% } %>
  </tbody>
</table>
</div>
<div class="right" style="width:50%;float:left;">
<h3 style='text-align:center' class='title'><h3>
<div style="font-size:10px;margin-left:55%;">发布时间：<span class="order_date" style="font-size:10px"></span></div>
<div style="font-size:12px;text-indent:50px;margin-top:20px;" class='content'> </div>
</div>
</div>
<script>
$('.contentshow').click(function() {
var id= $(this).attr('data-id');
var data='';
var url="/users/getcontent/"+id;
$.post(url,data,function(msg){
$('.right .title').text(msg[0].title);
$('.right .content').text(msg[0].content);
$('.right .order_date').text(msg[0].time);
	console.log(msg[0].content);
	console.log(msg[0].title);
})
})
</script>
<script src="/js/bookstore/ordertime.js"></script>
