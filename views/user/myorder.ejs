<% include ../public/header.ejs %>

<style type="text/css">
.manage-tit {
		background: rgba(48, 65, 96, 0.8);
		border-radius: 3px 3px 0 0;
		color: #FFFFFF;
		padding: 1px 0 14px 0;
	}
}
</style>
<div class="container" style="margin-top: 100px;">
	<div class="row">
			<div class="col-md-9 col-md-offset-1" style="margin-top:30px;">
				<% if(success_msg != ''){ %>
					<div class="alert alert-success">
						<%= success_msg %>
					</div>
					<% } %>
						<% if(error_msg != ''){ %>
							<div class="alert alert-danger">
								<%= error_msg %>
							</div>
							<% } %>
			</div>
		</div>
	<div class="row">
		<div class="col-md-12 col-md-offset-0 col-sm-12 col-sm-offset-1 col-xs-12 col-xs-offset-1">
			<div class="manage-tit">
				<div class="col-md-6">
					<h3 class="text-left">我的订单</h3>
				</div>
				<div style="clear: both;"></div>
			</div>
		</div>
	</div>
</div>


<table class="table" style='width:80%;margin-left:10%'>
   <thead>
      <tr>
         <th>订单号</th>
         <th>订购人</th>
          <th>订购日期</th>
         <th>订购物品</th>
         <th>订购数量</th>
         <th>联系电话</th>
         <th style='width:15%'>收货地址</th>
         <th style='width:15%'>订单状态</th>
         <th>操作<th>
      </tr>
   </thead>
<tbody>

   <% for(var i = 0; i < orders.length; i++) { %>

   <tr>

   <td><%= orders[i].oid %></td>
   <td><%= orders[i].name %> </td>
   <td> <span class="order_date"><%= orders[i].order_date %></span></td>
   <td><%= orders[i].book_name %> </td>
   <td> <%= orders[i].onum %></td>
   <td><%= orders[i].phonenum %> </td>
   <td> <%= orders[i].order_address %> </td>
   <td><% if (orders[i].status == 0) { %>
  	 订单状态：未处理
	<% }else{ %>
	订单状态：已发货
	<% } %>
    </td>
   <td> <% if (orders[i].status == 0) { %>
   <a class='btn btn-primary' href="/ %>">提醒发货</a>
		<% } %>
   </td>
   </tr>

   <% } %>
</tbody>


   </table>
<script src="/js/bookstore/ordertime.js"></script>
<% include ../public/footer.ejs %>
