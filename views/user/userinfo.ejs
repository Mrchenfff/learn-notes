<% include ../public/header.ejs %>
<style type="text/css">
.manage-tit {
		background: rgba(48, 65, 96, 0.8);
		border-radius: 3px 3px 0 0;
		color: #FFFFFF;
		padding: 1px 0 14px 0;
	}
}
</style>
<div class="container" style="margin-top: 100px;">
	<div class="row">
		<div class="col-md-12 col-md-offset-0 col-sm-12 col-sm-offset-1 col-xs-12 col-xs-offset-1">
			<div class="manage-tit">
				<div class="col-md-6">
					<h3 class="text-left">个人信息</h3>
				</div>
				<div style="clear: both;"></div>
			</div>
		</div>
	</div>
</div>

<form role="form" action="/users/updateuserinfo" method="post">
<div class="container" style="margin-top: 20px;width:400px;">
<% for(var i = 0; i < rows.length; i++) { %>
<input type="hidden" class="form-control" id="name" name="id" 
			   placeholder="请输入名称" value=<%= rows[i].id %> disabled/>
	<div class="form-group">
		<label for="name">账号:</label>
		<input type="text" class="form-control" id="name" name="username"
			   placeholder="请输入名称" value=<%= rows[i].username %>  disabled/>
	</div>
	<div class="form-group">
		<label for="name">姓名:</label>
		<input type="text" class="form-control" id="name"  name="name"
			   placeholder="请输入名称" value=<%= rows[i].name %> >
	</div>
		<div class="form-group">
		<label for="name">联系电话:</label>
		<input type="text" class="form-control" id="name" name="phonenum"
			   placeholder="请输入名称" value=<%= rows[i].phonenum %> >
	</div>
		<div class="form-group">
		<label for="name">收货地址:</label>
		<input type="text" class="form-control" id="name" name="address" 
			   placeholder="请输入名称" value=<%= rows[i].address %>  >
	</div>
	<% } %>
<input type='submit' class="btn_oltocart btn btn-primary" value="修改">
</form>
</div>
<% include ../public/footer.ejs %>