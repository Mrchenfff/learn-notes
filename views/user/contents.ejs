<% include ../public/header.ejs %>
<style type="text/css">
.manage-tit {
		background: rgba(48, 65, 96, 0.8);
		border-radius: 3px 3px 0 0;
		color: #FFFFFF;
		padding: 1px 0 14px 0;
	}
}
</style>
<div class="container" style="margin-top: 100px;">
	<div class="row">
			<div class="col-md-9 col-md-offset-1" style="margin-top:30px;">
				<% if(success_msg != ''){ %>
					<div class="alert alert-success">
						<%= success_msg %>
					</div>
					<% } %>
						<% if(error_msg != ''){ %>
							<div class="alert alert-danger">
								<%= error_msg %>
							</div>
							<% } %>
			</div>
		</div>
	<div class="row">
		<div class="col-md-12 col-md-offset-0 col-sm-12 col-sm-offset-1 col-xs-12 col-xs-offset-1">
			<div class="manage-tit">
				<div class="col-md-6">
					<h3 class="text-left">公告列表</h3>
				</div>
				<div class="col-md-6">
					<h6><button class="btn btn-primary" style="float: right;" data-toggle="modal" data-target="#shop_add">添加公告</button></h6>
				</div>
				<div style="clear: both;"></div>
			</div>
		</div>
	</div>
</div>

<div style="width:50%;margin-left:25%;">
<form role="form" action='http://localhost:3000/users/updatecontent/<%= rows[0].id %>' method='post'>
  <div class="form-group" style="margin-top:50px;">
	<div class="form-group" >
					<div class="input-group">
					<label for="name">公告标题：</label>
					<input type="text" class="form-control" placeholder="公告名" name="title" value=<%= rows[0].title %>>			
					</div>
					<br>
					<div class="form-group">
				 	<label for="name">公告内容：</label>
					<textarea class="form-control" rows="20" name='content'><%= rows[0].title %></textarea>		
				</div>
		</div>
	<input type='submit' class="btn_oltocart btn btn-primary" value="修改">
</form>
</div>
<script src="/js/bookstore/ordertime.js"></script>
<% include ../public/footer.ejs %>