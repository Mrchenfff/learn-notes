<% include ../public/header.ejs %>

	<style type="text/css">
	.manage-tit {
			background: rgba(48, 65, 96, 0.8);
			border-radius: 3px 3px 0 0;
			color: #FFFFFF;
			padding: 1px 0 14px 0;
		}
	}
	</style>
	<div class="container" style="margin-top: 120px;">
		<div class="row">
			<div class="col-md-3" style="margin-bottom:10px;">
				<a href="/shop/inshop/<%= dpid %>" class="btn btn-primary">返回店铺</a>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 col-md-offset-0 col-sm-12 col-sm-offset-1 col-xs-12 col-xs-offset-1">
				<div class="manage-tit">
					<div class="col-md-6">
						<h3 class="text-left">修改书籍信息</h3>
					</div>
					<div style="clear: both;"></div>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-1" style="margin-top:50px;">
				<form method="post" action="/book/uploading" enctype="multipart/form-data">
					<input type="file" name="inputFile" multiple="mutiple">
					<input type="submit" value="上传" name="btnUp" class="btn btn-primary">
				</form>
			</div>
			<div class="col-md-4 col-md-offset-1" style="margin-top:50px;">
				<form method="post" action="/book/xgstock">
					<input type="number" name="stock" placeholder="修改库存">
					<input type="submit" value="修改库存" name="btnUp" class="btn btn-primary">
				</form>
			</div>
		</div>
		<div class="row">
			<div class="col-md-9 col-md-offset-1" style="margin-top:30px;">
				<% if(success_msg != ''){ %>
					<div class="alert alert-success">
						<%= success_msg %>
					</div>
					<% } %>
						<% if(error_msg != ''){ %>
							<div class="alert alert-danger">
								<%= error_msg %>
							</div>
							<% } %>
			</div>
		</div>
	</div>

	<% include ../public/footer.ejs %>
