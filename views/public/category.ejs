<% include header.ejs %>

	<div class="space-custom"></div>
	<!-- breadcrumb start -->
	<div class="breadcrumb-area">
		<div class="container">
			<ol class="breadcrumb">
				<li><a href="/home"><i class="fa fa-home"></i></a></li>
				<li style="color:#000000;"><%= navname %></li>
				<li class="active">
					<%= dqcategory %>
				</li>
			</ol>
		</div>
	</div>
	<!-- breadcrumb end -->
	<!-- shop-area start -->
	<div class="shop-area">
		<div class="container">
			<div class="row">
				<div class="col-md-3 col-sm-4">
					<div class="column">
						<h2 class="title-block">网上书城</h2>
						<div class="sidebar-widget">
							<h3 class="sidebar-title">分类</h3>
							<ul class="sidebar-menu">
								<li><a href="/category/哲学类">哲学类</a></li>
								<li><a href="/category/社会科学类">社会科学类</a></li>
								<li><a href="/category/政治类">政治类</a></li>
								<li><a href="/category/经济文化类">经济文化类</a></li>
								<li><a href="/category/教育类">教育类</a></li>
								<li><a href="/category/艺术类">艺术类</a></li>
								<li><a href="/category/天文类">天文类</a></li>
								<li><a href="/category/医学类">医学类</a></li>
								<li><a href="/category/程序类">程序类</a></li>
								<li><a href="/category/其他">其他</a></li>
							</ul>
						</div>
					</div>
				</div>
				<div class="col-md-9 col-sm-8">
					<h2 class="page-heading mt-40">
						<span class="cat-name"><%= dqcategory %></span>
						<span class="heading-counter">共有<%= books.length %>件商品</span>
					</h2>
					<div class="shop-page-bar">
						<div>
							<div class="shop-bar">
								<!-- Nav tabs -->
								<ul class="shop-tab f-left" role="tablist">
									<li role="presentation" class="active"><a href="#home" data-toggle="tab"><i class="fa fa-th-large" aria-hidden="true"></i></a></li>
									<li role="presentation"><a href="#profile" data-toggle="tab"><i class="fa fa-th-list" aria-hidden="true"></i></a></li>
								</ul>
							</div>
							<!-- Tab panes -->
							<div class="tab-content">
								<div role="tabpanel" class="tab-pane active" id="home">
									<div class="row">
										<% for(var i = 0; i < books.length; i++) { %>
											<div class="col-md-4 col-sm-6">
												<div class="product-wrapper mb-40">
													<div class="product-img">
														<% if (books[i].image != null) { %>
															<img src="<%= books[i].image %>" alt="" />
															<% }else { %>
																<img src="/images/product/12.jpg" alt="" />
																<% } %>
																	<span class="new-label"><%= books[i].category %></span>
																	<div class="product-action">
																		<a href="#" class="btn_bookcon" data-toggle="modal"><i class="pe-7s-look"></i></a>
																	</div>
													</div>
													<div class="product-content">
														<div class="pro-title">
															<h3><a href="#"><%= books[i].book_name %></a></h3>
															<h5>库存：<%= books[i].stock %></h5>
															<h5>销量：<%= books[i].sales_volume %></h5>
														</div>
														<div class="price-reviews">
															<div class="price-box">
																<span class="price product-price">￥<%= books[i].discount %></span>
																<span class="old-price product-price"><%= books[i].price %></span>
															</div>
														</div>
													</div>
												</div>
											</div>
											<% } %>
									</div>
								</div>
								<div role="tabpanel" class="tab-pane" id="profile">
									<% for(var i = 0; i < books.length; i++) { %>
										<div class="row mb-50">
											<div class="col-xs-5 col-sm-5 col-md-4">
												<div class="product-wrapper">
													<div class="product-img">
														<% if (books[i].image != null) { %>
															<img src="<%= books[i].image %>" alt="" />
															<% }else { %>
																<img src="/images/product/12.jpg" alt="" />
																<% } %>
																	<span class="new-label"><%= books[i].category %></span>
													</div>
												</div>
											</div>
											<div class="col-xs-7 col-sm-7 col-md-8">
												<div class="product-content product-list">
													<div class="pro-title">
														<h3>
															<%= books[i].book_name %>
															<h6>库存：<%= books[i].stock %></h6>
															<h6>销量：<%= books[i].sales_volume %></h6></h3>
													</div>
													<div class="price-reviews">
														<div class="price-box">
															<span class="price product-price">￥<%= books[i].discount %></span>
															<span class="old-price product-price"><%= books[i].price %></span>
														</div>
													</div>
													<p>
														<%= books[i].detail %>
													</p>
													<div class="product-action">
														<form action="#">
															<input type="hidden" class="cart_olbookid" value="<%= books[i].id %>">
															<input type="number" class="cart_olnum" value="1" />
															<% if (usertype == 0){ %>
																<input type='button' class="btn_oltocart btn btn-primary" value="加入购物车">
																<% }else{ %>
																	<input type='button' class="btn_oltocart btn btn-primary" value="加入购物车" disabled>
																	<% } %>
														</form>
													</div>
												</div>
											</div>
										</div>
										<% } %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div id="joincartmes" style="position:fixed;bottom:30px;"></div>
	</div>


	<% for(var i = 0; i < books.length; i++) { %>
		<div class="modal fade bookcon_modal" tabindex="-1" role="dialog">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<div class="col-md-6 col-md-offset-3 joincartmessage"></div>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">x</span></button>
					</div>
					<div class="modal-body">
						<div class="modal-img">
							<% if (books[i].image != null) { %>
								<img src="<%= books[i].image %>" alt="" />
								<% }else { %>
									<img src="/images/product/1.jpg" alt="" />
									<% } %>
						</div>
						<div class="modal-pro-content">
							<h3><a href="#"><%= books[i].book_name %></a></h3>
							<div class="price">
								<span>￥<%= books[i].discount %></span>
								<span class="old"><%= books[i].price %></span>
							</div>
							<p>
								<%= books[i].detail %>
							</p>
							<form action="#">
								<input type="hidden" class="cart_bookid" value="<%= books[i].id %>">
								<input type="number" class="cart_num" value="1" />
								<% if(usertype == 0){ %>
									<input type='button' class="btn_tocart btn btn-primary" value="joincart">
									<% }else{ %>
										<input type='button' class="btn_tocart btn btn-primary" value="joincart" disabled>
										<% } %>
							</form>
							<div class="product_meta">
								<span class="posted_in">分类: <a rel="tag" href="#"><%= books[i].category %></a></span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<% } %>

			<script src="/js/bookstore/addcart.js"></script>

			<% include footer.ejs %>
