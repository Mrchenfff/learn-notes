<% include ../public/header.ejs %>

<div class="cart-main-area" style="margin-top:160px;">
		<div class="container">
			<div class="row">
			<div class="col-md-9 col-md-offset-1" style="margin-top:30px;">
				<% if(success_msg != ''){ %>
					<div class="alert alert-success">
						<%= success_msg %>
					</div>
					<% } %>
						<% if(error_msg != ''){ %>
							<div class="alert alert-danger">
								<%= error_msg %>
							</div>
							<% } %>
			</div>
		</div>
			<div class="row">
				<div class="col-md-12 col-sm-12 col-xs-12">
					<form action="/book/placeorder" method="post">				
						<div class="table-content table-responsive">
							<table>
								<thead>
									<tr>
										<th class="product-thumbnail"></th>
										<th class="product-thumbnail">我的收货地址</th>
										<th class="product-thumbnail"><input type='text' name='order_address' value="<%= data.address %>"></input></th>
									</tr>
									<tr>
										<th class="product-thumbnail"></th>
										<th class="product-thumbnail">图片</th>
										<th class="product-name">书名</th>
										<th class="product-price">价格</th>
										<th class="product-quantity">数量</th>
										<th class="product-subtotal">所属店铺</th>
										<th class="product-remove">移除</th>
									</tr>
								</thead>
								<tbody>
									<% for(var i = 0; i < books.length; i++) { %>
									<tr class="cart_item">
										<td class="product-thumbnail">
											<input type="checkbox" name="cartbooks" price="" value="<%= books[i].bid %>" class="cart_check">
											<input type="checkbox" name="booknums" class="cart_checkdis" style="display:none;" value="">
										</td>
										<td class="product-thumbnail">
										<% if (books[i].image == null) { %>
											<img src="/images/product/1.jpg" alt="" />
										<% }else{ %>
											<img src="<%= books[i].image %>" alt="" />
										<% } %>
										</td>
										<td class="product-name"><a href="#"><%= books[i].book_name %></a></td>
										<td class="product-price">
											<span class="amount">
												<label class="cart_danjia"><%= books[i].discount %></label>
											</span></td>
										<td class="product-quantity"><input type="number" value="<%= books[i].number %>" class="cart_box" /></td>
										<td class="product-subtotal"><%= books[i].shop_name %></td>
										<td class="product-remove"><a href="/book/delcartbook/<%= books[i].cartid %>"><i class="fa fa-times"></i></a></td>
									</tr>
									<% } %>
								</tbody>
							</table>
						</div>
						<div class="row" style="margin-top:30px;">
							<div class="col-md-8 col-sm-7 col-xs-12">
							</div>
							<div class="col-md-4 col-sm-5 col-xs-12">
								<div class="cart_totals">
									<table>
										<tbody>
											<tr class="cart-subtotal">
												<th>总价：</th>
												<td>
													<label class="amount" id="zongjia">0.00</label>
												</td>
											</tr>
											<tr class="order-total">
												<th>优惠后：</th>
												<td>
													<strong>
														<label id="zongjia_yh">0.00</label>
													</strong>
												</td>
											</tr>										
										</tbody>
									</table>
									<div class="wc-proceed-to-checkout">
										<input type="submit" value="下单" class="btn btn-primary col-md-4 pull-right">
									</div>
								</div>
							</div>
						</div>
					</form>	
				</div>
			</div>
		</div>
	</div>
	<script src="/js/bookstore/bookcart.js"></script>

<% include ../public/footer.ejs %>
